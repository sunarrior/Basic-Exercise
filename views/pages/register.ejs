<div id="modalRegisterForm" class="modal fade">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <button 
                    class="btn-close btn-close-blue" 
                    data-bs-dismiss="modal"></button>
                <div class="bg-gray form-box">
                    <h2>Register Form</h2>
                    <form class="form-login">
                        <!-- Name input -->
                        <div class="form-outline mb-4">
                            <input type="text" id="nameRegister" class="form-control" placeholder="Name"/>
                        </div>

                        <!-- Username input -->
                        <div class="form-outline mb-4">
                            <input type="text" id="usernameRegister" class="form-control" placeholder="Username"/>
                        </div>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input type="email" id="emailRegister" class="form-control" placeholder="Email"/>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <input type="password" id="passwordRegister" class="form-control" placeholder="Password"/>
                        </div>

                        <!-- Repeat Password input -->
                        <div class="form-outline mb-4">
                            <input type="password" id="repeatPasswordRegister" class="form-control" placeholder="Repeat password"/>
                        </div>

                        <!-- Submit button -->
                        <button type="button" class="btn btn-primary btn-block mb-4">Sign up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>